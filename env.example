# Configuration AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=fl-crew-reddit-prod-1234567890
USE_S3_STORAGE=true

# API Keys
OPENAI_API_KEY=your-openai-api-key
AGENT_LLM_MODEL=gpt-4

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=MCP Reddit Server v1.0

# Configuration LLM
BASE_LLM_MODEL=mistralai/Mistral-7B-v0.1
USE_LORA=true
LORA_R=8
LORA_ALPHA=16
USE_QUANTIZATION=false

# Configuration Federated Learning
FEDERATION_ROUNDS=10
LOCAL_EPOCHS=3
BATCH_SIZE=4
LEARNING_RATE=2e-4
AGGREGATION_METHOD=weighted_average

# Configuration ECS/EC2
EC2_INSTANCE_TYPE=g4dn.xlarge
ECS_CLUSTER_NAME=fl-crew-reddit-cluster
ECS_SERVICE_NAME=fl-crew-reddit-service

